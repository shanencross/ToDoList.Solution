@{
  Layout = "_Layout";
}

@using ToDoList.Models;
@model List<ToDoList.Models.Category>

<h1>Categories</h1>

@if (Model.Count == 0)
{
  <p>Sorry, no categories have been added yet. :(</p>
}

<ul>
  @foreach (Category category in Model)
  {
    <li>@Html.ActionLink($"{category.Name}", "Details", new { id = category.CategoryId })</li>
  }
</ul>

<p>@Html.ActionLink("Add a new Category", "Create")</p>